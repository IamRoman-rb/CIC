<!DOCTYPE html>
<html lang="en">
    <%- include ("../partials/head") %> 
<body>
    <%- include ("../partials/header") %> 
    <main id="main-create">
        <h1>Crea Una Tarea Nueva</h1>
        <hr>
        <form action="/tareas/guardar" enctype="multipart/form-data" method="POST" id="form-create-file">
            <i class="fas fa-book"></i>
            <input name="title" type="text"  class="formulario" placeholder="Titulo de la tarea/trabajo">
            <i class="fas fa-stopwatch"></i>
            <input name="date" type="date" class="formulario">
            <fieldset>
                <i class="fas fa-envelope"></i>
                <textarea name="text" id="text" placeholder="Informacion de la Tarea"></textarea>
            </fieldset>
            <label id="file">
                <i class="fas fa-file-upload"></i>
                <input name="files" type="file" id="files" multiple>
            </label>
            <select name="level" class="selectores">
                <option value="" disabled>Ciclo</option>
                <% levels.forEach(l => { %>
                    <option value="<%= l.id  %>">
                        <%= l.name %>
                    </option>
                <% }) %>
            </select>
            <select name="course" class="selectores">
                <option value="" disabled>AÃ±o</option>
                <% courses.forEach(c => { %>
                    <option value="<%= c.id  %>">
                        <%= c.name %>
                    </option>  
                <% }) %>
            </select>
            <select name="subject" class="selectores">
                <option value="" disabled>Materias</option>
                <% subjects.forEach(s => { %>
                    <option value="<%= s.id  %>">
                        <%= s.name %>
                    </option>
                <% }) %>
            </select>
            <% if (user.role != 4) { %>
                <select name="teacher" class="selectores">
                    <option value="" disabled>Profesor/a</option>
                    <% teachers.forEach(t => { %>
                        <option value="<%= t.id  %>">
                            <%= t.name %>
                        </option>
                    <% }) %>
                </select>
            <% } else { %>
                <i class="fas fa-user-alt"></i>
                <input name="teacher" type="text" class="formulario" disabled value="<%= user.name  %>">    
            <% } %>
            <section id="send-file-buttons">
                <button type="reset" class="button-file" id="button-delete"><i class="fas fa-trash"></i></button>
                <button type="submit" class="button-file" id="button-submit"><i class="fas fa-share-square"></i></button>
            </section>
        </form>
    </main>
    <%- include ("../partials/footer") %> 
</body>
</html>