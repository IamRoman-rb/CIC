<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head")  %> 
<body>
    <%- include("../partials/header")  %>
    <article id="contenedor_carga">
        <article id="carga"></article>
    </article>
    <script>
        window.onload = function(){
            let contenedor = document.getElementById("contenedor_carga")

            contenedor.style.visibility = "hidden";
            contenedor.style.opacity = "0";
        }
    </script>
    <main>
        <h1>Crea Tu Cuenta</h1>
        <hr>
        <form action="" id="form-register">
            <i class="fas fa-user-alt"></i>
            <input type="text" class="formulario" placeholder="Nombre">
            <i class="fas fa-user-alt"></i>
            <input type="text" class="formulario" placeholder="Apellido">
            <i class="fas fa-user-alt"></i>
            <input type="text" class="formulario" placeholder="Nombre de Usuario">
            <i class="fas fa-envelope"></i>
            <input type="email" class="formulario" placeholder="Email">
            <i class="fas fa-lock"></i>
            <input type="password" class="formulario" placeholder="Contraseña">
            <i class="fas fa-lock"></i>
            <input type="password" class="formulario" placeholder="Repetir Contraseña">
            <section id="buttons-register">
                <button type="reset" class="button-register" id="button-delete"><i class="fas fa-trash"></i></button>
                <button type="submit" class="button-register" id="button-submit"><i class="fas fa-share-square"></i></button>
            </section>
        </form>
    </main>
    <%- include("../partials/footer")  %>
</body>
</html>